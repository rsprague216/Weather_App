{
  "name": "weather-app-server",
  "version": "1.0.0",
  "description": "Node.js backend for Weather App",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "db:create": "node db/create-db.js",
    "db:migrate": "node db/init.js",
    "db:setup": "npm run db:create && npm run db:migrate",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test JWT_SECRET=test-secret OPENAI_API_KEY=test-openai-key vitest run tests/unit",
    "test:integration": "POSTGRES_DB=${POSTGRES_DB:-weather_app_test} NODE_ENV=test JWT_SECRET=test-secret OPENAI_API_KEY=test-openai-key npm run test:db:setup && POSTGRES_DB=${POSTGRES_DB:-weather_app_test} NODE_ENV=test JWT_SECRET=test-secret OPENAI_API_KEY=test-openai-key vitest run tests/integration",
    "test:watch": "POSTGRES_DB=${POSTGRES_DB:-weather_app_test} NODE_ENV=test JWT_SECRET=test-secret OPENAI_API_KEY=test-openai-key vitest",
    "test:db:setup": "POSTGRES_DB=${POSTGRES_DB:-weather_app_test} node db/create-db.js && POSTGRES_DB=${POSTGRES_DB:-weather_app_test} node db/init.js",
    "check:lookup-disambiguation": "node scripts/check-lookup-disambiguation.js"
  },
  "keywords": [
    "nodejs",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "argon2": "^0.44.0",
    "axios": "^1.13.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.1",
    "openai": "^6.21.0",
    "pg": "^8.11.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "supertest": "^7.1.1",
    "vitest": "^2.1.8"
  }
}
